# ==========================================
# BACKEND - Environment Configuration
# ==========================================
# Copy this file to .env and update values for your environment

# ==========================================
# Application
# ==========================================
NODE_ENV=development
PORT=3000
APP_NAME=AtlasRestaurant
APP_VERSION=1.0.0
LOG_LEVEL=debug

# ==========================================
# Database Configuration
# ==========================================
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=erp_user
DB_PASSWORD=erp_password
DB_NAME=erp_carniceria
SRC_DATABASE_URL=postgres://erp_user:erp_password@localhost:5432/erp_carniceria
STAGING_DATABASE_URL=postgres://erp_user:erp_password@localhost:5432/erp_carniceria_staging

# Synchronize database schema (ONLY for development!)
DB_SYNCHRONIZE=false
DB_LOGGING=false

# ==========================================
# JWT Configuration
# ==========================================
JWT_SECRET=your_super_secret_jwt_key_min_32_chars_change_in_prod
JWT_EXPIRATION=3600
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_in_prod
JWT_REFRESH_EXPIRATION=604800

# Auth lockout
MAX_FAILED_ATTEMPTS=5
LOCK_DURATION_MINUTES=30

# ==========================================
# CORS Configuration
# ==========================================
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
CORS_CREDENTIALS=true

# ==========================================
# Email Configuration (optional)
# ==========================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_FROM=noreply@atlasrestaurant.com

# ==========================================
# File Upload
# ==========================================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# ==========================================
# Redis (optional, for caching)
# ==========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ==========================================
# External Services
# ==========================================
STRIPE_SECRET_KEY=sk_test_your_key
STRIPE_PUBLIC_KEY=pk_test_your_key

# ==========================================
# Development/Debug
# ==========================================
DEBUG=atlas:*
