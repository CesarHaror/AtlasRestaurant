# ==========================================
# FRONTEND - Environment Configuration
# ==========================================
# Copy this file to .env and update values for your environment

# ==========================================
# API Configuration
# ==========================================
VITE_API_BASE_URL=http://localhost:3000/api
VITE_API_TIMEOUT=30000

# ==========================================
# Application Info
# ==========================================
VITE_APP_NAME=AtlasRestaurant
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Sistema POS para Restaurantes

# ==========================================
# Feature Flags
# ==========================================
VITE_ENABLE_DEBUG=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false

# ==========================================
# Authentication
# ==========================================
VITE_AUTH_TOKEN_KEY=atlas_auth_token
VITE_AUTH_REFRESH_KEY=atlas_refresh_token
VITE_AUTH_STORAGE=localStorage

# ==========================================
# UI/UX Settings
# ==========================================
VITE_DARK_MODE=false
VITE_LANGUAGE=es
VITE_TIMEZONE=America/Mexico_City

# ==========================================
# External Services
# ==========================================
VITE_GOOGLE_MAPS_API_KEY=your_key_here
VITE_STRIPE_PUBLIC_KEY=pk_test_your_key

# ==========================================
# Development/Debug
# ==========================================
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=info
